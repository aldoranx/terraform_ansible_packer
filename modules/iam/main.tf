resource "aws_iam_role_policy" "lambda_policy" {
  name = "lambda_policy"
  role = aws_iam_role.iam_for_lambda.id

  # Terraform's "jsonencode" function converts a
  # Terraform expression result to valid JSON syntax.
  policy = jsonencode({
    Version = "2012-10-17"
    "Statement": [
    {
      "Sid": "Stmt1627476583983",
      "Action": "logs:*",
      "Effect": "Allow",
      "Resource": "*"
      },
    ]
  })
}

